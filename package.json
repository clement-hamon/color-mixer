{
  "name": "color-mixer",
  "version": "1.0.0",
  "type": "module",
  "description": "A Bootstrap HTML/JavaScript color mixer application",
  "main": "index.js",
  "scripts": {
    "serve": "bun --watch run dev",
    "build": "bun run lint && bun run format:check && bun run copy-files",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{html,css,js}\"",
    "format:check": "prettier --check \"src/**/*.{html,css,js}\"",
    "copy-files": "mkdir -p dist && cp -r src/* dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "bun run serve"
  },
  "keywords": [
    "bootstrap",
    "javascript",
    "html",
    "css",
    "color-mixer"
  ],
  "author": "Clement Hamon",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-html": "^8.0.0",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{html,css,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
